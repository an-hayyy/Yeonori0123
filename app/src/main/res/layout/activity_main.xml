<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/baseLayout"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="연노리"
            android:fontFamily="@font/nanumsquareb"
            android:gravity="center_horizontal"
            android:layout_marginTop="38dp"
            android:textColor="@color/yeonori"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/nanumsquarer"
            android:text="'연노리'는 '연리지'와 '놀이'의 합성어로\n 다문화 인식 개선을 위한 어플입니다."
            android:lineSpacingExtra ="5dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Politik"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="30dp"
                android:src="@drawable/mainbutton1" />

            <ImageView
                android:id="@+id/Sos"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="20dp"
                android:src="@drawable/mainbutton02" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Experience"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginLeft="30dp"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:src="@drawable/mainbutton3" />

            <ImageView
                android:id="@+id/Education"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:src="@drawable/mainbutton4" />

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/Myongjicollege"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/myongjicollege" />
</LinearLayout>